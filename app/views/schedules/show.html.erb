<%# 共通部分%>
<%= render "share/header" %>
<%# 共通部分ここまで%>

<div class="show_page">
  <div class="left_display">
    <div class="left_top_display">
      <div class="left_top_top_display">
        <div class="left_top_display_a">
          <div class="title_column">
            <%= @schedule.title %>
          </div>
        </div>
        <div class="left_top_display_b">
          <div class="image_column">
            <%= image_tag @schedule.user.image.variant(resize: '60x60') if @schedule.user.image.attached? %>
          </div>
        </div>
        <div class="left_top_display_c">
          <div class="author_column">
            <%= "作成者： "%>
          </div>
          <div class="user_column">
            <%= @schedule.user.name %>
          </div>
        </div>
        <div class="left_top_display_btn">
        編集と削除ボタン
        </div>
      </div>
      <div class="left_top_bottom_display">
        <div class="left_top_display_d">
          <div class="start_time_column">
            <div class="start_time_column_md">
              <%= @schedule.start_time.strftime("%m月%d日") %>
            </div>
          <% if @schedule.all_day == false %>
            <div class="start_time_column_hm">
              <%= @schedule.start_time.strftime("%H:%M") %>
            </div>
          <% else %>
            <div class="all_day_column">
              <%= "終日" %>
            </div>
          <% end %>
          </div>
        </div>
        <div class="left_top_display_e">
          <div class="finish_time_column">
          <% if @schedule.all_day == false %>
            <div class="finish_time_column_md">
              <%= @schedule.finish_time.strftime("%m月%d日") %>
            </div>
            <div class="finish_time_column_hm">
              <%= @schedule.finish_time.strftime("%H:%M") %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="left_bottom_display">
      <div class="left_bottom_display_a">
        <div class="note_column">
          <div class="note_column_head">
            <span>備考</span>
          </div>
          <div class="note_column_content">
            <%= @schedule.note %>
          </div>
        </div>
      </div>
      <div class="left_bottom_display_b">
        <div class="return_column">
          <%= link_to "戻る", group_schedules_path(@group.id), class:"return_colomn" %>
        </div>
      </div>
    </div>
  </div>
  <div class="right_display">
   チャット
  </div>
</div>