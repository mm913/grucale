<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
 <div class="form-wrapper">
  <h3>新規ユーザー登録</h3>

  <%# エラーメッセージの部分テンプレート%>
  <%= render 'share/error_messages', model: f.object %>
  
  <%# 入力項目 %>
  <div class="form-group">
    <div class='form-item'>
      <label class="form-text"></label>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"名前" %>
  </div>
  <div class="form-group">
    <div class="form-item">
      <label class="form-text"></label>      
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-item'>
      <label class="form-text"></label>     
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード（6文字以上の英数字）" %> 
  </div>
  <div class="form-group">
    <div class='form-item'>
      <label class="form-text"></label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"確認用パスワード" %>
  </div>
  <div class="form-group">
    <div class='form-item'>
      <label class="form-text"></label>
    </div>
    <%= f.text_field :department_name, class:"input-default", id:"department_name", placeholder:"部署名" %>
  </div>
  <div class="form-group">
    <div class='form-image'>
      <%= "プロフィール画像" %>
      <label class="form-text"></label>
    </div>
    <%= f.file_field :image, class:"profile-image" %>
  </div>
  <%# 入力項目ここまで %>

  <div class='button-panel'>
    <%= f.submit "新規登録" ,class:"button" %>
  </div>
<% end %>
<div class="back-button">
  <%= link_to "戻る", new_user_session_path, class:"back_btn" %>
</div>