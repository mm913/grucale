<%# 共通部分%>
<%= render "share/header" %>
<%# 共通部分ここまで%>

<%= form_with model: current_user, class: 'registration-main', local: true do |f| %>
 <div class="form-wrapper">
  <h3>ユーザー情報編集</h3>

  <%# エラーメッセージの部分テンプレート%>
  <%#= render 'share/error_messages', model: f.object %>
  
  <%# 入力項目 %>
  <div class="form-group">
    <div class='form-item'>
      <label class="form-text"></label>
      <div class="input-default">
        <p><%= current_user.name %></p>
      </div>
    </div>
  </div>

    <% f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>

  <div class="form-group">
    <div class='form-item'>
      <label class="form-text"></label>
    </div>
      <div>
        <p>プロフィール:</p>
      </div>
    <%= f.text_field :department_name, class:"input-default", id:"department_name", placeholder:"プロフィール" %>
  </div>
  <div class="form-group">
    <div class='form-image'>
      <%= "プロフィール画像" %>
      <label class="form-text"></label>
    </div>
    <%= f.file_field :image, class:"profile-image" %>
  </div>
  <%# 入力項目ここまで %>

  <div class='button-panel'>
    <%= f.submit "更新" ,class:"button" %>
  </div>
<% end %>
<div class="back-button">
  <%= link_to "戻る", user_path(current_user), class:"back_btn" %>
</div>