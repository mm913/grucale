<%# 共通部分%>
<%= render "share/header" %>
<%# 共通部分ここまで%>

<div class="main_show">
  <div class="show_top">
    <div class="g_name">
      <%= @group.group_name %>
    </div>

    <%# グループ作成日の表示 %>
    <div class="created-date">
      <%= "作成日： "+ @group.created_at.strftime('%Y年%m月%d日') %>
    </div>
  </div>

  <div class="show_center">
    <div class="show_center_top">
      <div class="g_note">
        <%= @group.note %>
      </div>
    <div class="show_center_bottom">
    <%# カレンダー表示のリンク先を変更%>
      <%= link_to "カレンダー表示", group_schedules_path(@group.id), class:"to_calendar" %>
      <%= link_to "退会する", group_path(@group), method: :delete, class:"withdrawale" %>
    </div>
  </div>
  <div class="show_bottom">
    <div class="show_bottom_left">
    </div>
    <div class="show_bottom_center">
      <p class="member">【参加中のメンバー】</p>
      <div class="member_list">
        <ul class="members">
          <% @group.users.each do |user| %>
            <div class="g_member">
            <% if user.image == nil %>
              <li class="member_image"><img src="no_image.jpeg"></li>
            <% else %>
              <li class="member_image"><%= image_tag user.image.variant(resize: '30x30') if user.image.attached? %></li>
            <% end %>
            <li><%= user.name %></li>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="show_bottom_right">
    </div>
  </div>
</div>