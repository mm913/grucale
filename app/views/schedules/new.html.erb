<%= form_with model: @schedule, url: group_schedules_path, local: true do |form| %>

  <div class="title">
    <%= form.label :title %>
    <%= form.text_field :title, class:"input-default", id:"title", placeholder:"タイトル" %>
  </div>

    <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, class:"input-default", id:"start_time", placeholder:"開始日時"  %>
  </div>

   <div class="time">
    <%= form.label :finish_time %>
    <%= form.datetime_select :finish_time,  class:"input-default", id:"finish_time", placeholder:"終了日時"  %>
  </div>

  <div class="note">
    <%= form.label :note %>
    <%= form.text_field :note, class:"input-default", id:"note", placeholder:"備考"  %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>